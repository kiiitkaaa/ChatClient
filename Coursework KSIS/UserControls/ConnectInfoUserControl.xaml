<UserControl x:Class="Coursework_KSIS.UserControls.ConnectInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework_KSIS.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#49225b">
        <StackPanel>
            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 10 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="IP" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Content="CurrentIP" Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="IP_LBL"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 5 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Порт" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Content="CurrentPort" Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="Port_LBL"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 5 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="IP Сервера" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Content="CurrentIPServer" Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="IPS_LBL"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
