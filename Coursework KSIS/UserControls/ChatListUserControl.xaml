<UserControl x:Class="Coursework_KSIS.UserControls.ChatListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework_KSIS.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    
    <Grid Background="#49225b">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#6e3482">
            <Label Content="Чаты" Foreground="AliceBlue" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer MaxHeight="440" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatsContainer">

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
