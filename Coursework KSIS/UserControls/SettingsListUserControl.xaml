<UserControl x:Class="Coursework_KSIS.UserControls.SettingsListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework_KSIS.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="310">
    
    <Grid  Background="#49225b">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#6e3482">
            <Label Content="Настройки" Foreground="AliceBlue" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                <Button x:Name="ButtonAccaunt" Style="{StaticResource BorderButton}" 
                        Content="Аккаунт" Background="#6e3482"  Foreground="#FFEADDF0" 
                        FontSize="14"  Margin="10 10 10 0" HorizontalAlignment="Stretch" 
                        Height="40" Click="ButtonAccaunt_Click"/>
                <Button x:Name="ButtonServer" Style="{StaticResource BorderButton}" 
                        Content="Соединение с сервером " Background="#6e3482" 
                        Foreground="#FFEADDF0" FontSize="14"  Margin="10 10 10 0" 
                        HorizontalAlignment="Stretch" Height="40" Click="ButtonServer_Click"/>
                <Button x:Name="ButtonAboutProgram" Style="{StaticResource BorderButton}"
                        Content="О программе" Background="#6e3482" Foreground="#FFEADDF0"
                        FontSize="14"  Margin="10 10 10 0" HorizontalAlignment="Stretch" Height="40"
                        Click="ButtonAboutProgram_Click"/>
                <Button x:Name="ButtonAboutAuthor" Style="{StaticResource BorderButton}"
                        Content="Об авторе" Background="#6e3482" Foreground="#FFEADDF0"
                        FontSize="14"  Margin="10 10 10 0" HorizontalAlignment="Stretch" Height="40"
                        Click="ButtonAboutAuthor_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
