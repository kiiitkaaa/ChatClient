<UserControl x:Class="Coursework_KSIS.UserControls.UserActionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework_KSIS.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#49225b">
        <StackPanel>
            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 5 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Имя" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="Name_LBL"/>
                </StackPanel>
            </Border>
            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 5 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Имя пользователя" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="Username_LBL"/>
                </StackPanel>
            </Border>
            <Border CornerRadius="7" Background="#6e3482" BorderThickness="0" Margin="10 5 10 5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Номер телефона" Foreground="#FFEADDF0" FontSize="14" FontWeight="Bold" Margin="10 10 10 10"/>
                    <Label Foreground="#FFEADDF0" FontSize="14" Margin="10 10 10 10" x:Name="Number_LBL"/>
                </StackPanel>
            </Border>

            <Button x:Name="ButtonCreateChat" Grid.Row="2" Content="Создать чат с пользователем" Width="250" Style="{StaticResource NextButton}" 
                Background="#6e3482" Foreground="#FFEADDF0" BorderBrush="#6e3482" FontSize="14" 
                Margin="10" Click="ButtonCreateChat_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
